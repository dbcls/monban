#!/usr/bin/env node

const CheckReferenceValidator = require('../validators/check-reference-validator');
const Validator = require('../dists/validator');

const validators = [
  new CheckReferenceValidator(),
];

const validator = new Validator(validators);

process.argv.slice(2).forEach(async (path) => {
  const result = await validator.validate(path);
  console.log(JSON.stringify(result, null, 2));
});
